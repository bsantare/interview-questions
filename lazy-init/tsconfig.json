{
  "include": [
    "./src/*"
  ],
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "jest"
    ],
    "rootDir": "src",
    "moduleResolution": "node"
  }
}
